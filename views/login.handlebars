<!--Form login -->

<h2><small> ¡Bienvenido! </small></h2> 
  
  <div class="col-5">
         
    <form class="form" method="post">

      <div class="form-group">
        <label for="email">Email</label>
        <input type="email" class= "form-control" placeholder="Email" name="email" id="editorial" value="{{{email}}}">   
      </div>
             
      <div class="form-group">
        <label for="password">Contraseña</label>
        <input type="password" class= "form-control" placeholder="Mínimo 8 caracteres" name="password" id="password" value="{{{password}}}">
      </div>       
    
      <button type="submit" class="btn btn-primary">Iniciar sesión</button>
      
      <hr>
      
      <p class="text-secondary">¿No tienes cuenta? <a href="/signup" class="btn btn-light btn-sm">Regístrate</a></p>

    </form>
  
  </div>

 